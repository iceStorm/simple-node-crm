{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        // "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {}
    },
    "include": ["./src/**/*.ts"],
    // "exclude": ["./node_modules"]
}
