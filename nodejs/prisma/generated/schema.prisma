  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x", "darwin-arm64"]
  output        = "./generated"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_CONNECTION")
}

