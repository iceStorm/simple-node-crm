  // name    String?  @db.VarChar(255)
  // email   String   @unique @db.VarChar(255)
  // Post    Post[]
  // Profile Profile?
  username String @id @db.VarChar(50)
  password String @db.VarChar(255)
}

model Roles {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(255)
}

model Customer {
  customerNumber   Int    @id @default(autoincrement())
  customerName     String @db.VarChar(50)
  contactFirstName String @db.VarChar(50)
  contactLastName  String @db.VarChar(50)
}

model Employee {
  employeeNumber Int    @id @default(autoincrement())
  lastName       String @db.VarChar(50)
  firstName      String @db.VarChar(50)
  extension      String @db.VarChar(50)
  email          String @db.VarChar(100)
  officeCode     String @db.VarChar(50)
